# AI API配置
# ================================
# 前端应用配置
# ================================

# API服务器地址配置
# 可对接: 本地开发服务器、远程API服务器等
# 示例: http://localhost:3001 或 https://api.your-domain.com
REACT_APP_API_BASE_URL=http://localhost:3001

# 是否使用代理模式（开发环境通常为false，生产环境为true）
REACT_APP_USE_PROXY=false

# 调试模式
REACT_APP_DEBUG=true

# 应用版本
REACT_APP_VERSION=3.0.0

# ================================
# AI服务配置（可选，也可在后台管理界面配置）
# ================================

# AI API密钥
# 可对接: OpenAI、DeepSeek、通义千问、文心一言、Claude、Gemini等AI服务
REACT_APP_AI_API_KEY=your_ai_api_key_here

# AI服务基础URL
REACT_APP_AI_BASE_URL=https://api.example-ai-provider.com/v1

# AI模型名称
REACT_APP_AI_MODEL=gpt-3.5-turbo

# ================================
# 学术数据库配置
# ================================

# Semantic Scholar API密钥
REACT_APP_SEMANTIC_SCHOLAR_KEY=your_semantic_scholar_key_here

# Google Scholar爬虫服务密钥
REACT_APP_SCRAPING_DOG_KEY=your_scrapingdog_key_here

# ================================
# 安全配置
# ================================

# 日志访问密钥（多个密钥用于不同权限级别）
REACT_APP_LOGS_ACCESS_KEY=your_logs_access_key_here
REACT_APP_LOGS_ACCESS_KEY_1=your_logs_access_key_1_here
REACT_APP_LOGS_ACCESS_KEY_2=your_logs_access_key_2_here
REACT_APP_LOGS_ACCESS_KEY_3=your_logs_access_key_3_here

# 管理员密码（多个密码用于不同管理员）
REACT_APP_ADMIN_PASSWORD_1=your_admin_password_1_here
REACT_APP_ADMIN_PASSWORD_2=your_admin_password_2_here
REACT_APP_ADMIN_PASSWORD_3=your_admin_password_3_here
REACT_APP_ADMIN_PASSWORD_4=your_admin_password_4_here

# JWT密钥（用于会话管理）
REACT_APP_JWT_SECRET=your_jwt_secret_here

# ================================
# 分析服务配置（可选）
# ================================

# Google Analytics ID
REACT_APP_GA_ID=YOUR-GA-ID

# Google Tag Manager ID
REACT_APP_GTM_ID=YOUR-GTM-ID

# Microsoft Clarity ID
REACT_APP_CLARITY_ID=YOUR-CLARITY-ID

# ================================
# 服务器部署配置（用于部署脚本）
# ================================

# 开发服务器配置
SERVER_IP=your_server_ip_here
SERVER_USER=root
SERVER_PASSWORD=your_server_password_here
SERVER_PORT=22
DEPLOY_PATH=/your/deploy/path

# 生产服务器配置
PROD_SERVER_IP=your_production_server_ip_here
PROD_SERVER_USER=root
PROD_SERVER_PASSWORD=your_production_server_password_here
PROD_SERVER_PORT=22
PROD_PATH=/your/production/path

# 备份服务器配置
BACKUP_SERVER_IP=your_backup_server_ip_here
BACKUP_PATH=/your/backup/path

# ================================
# 数据库配置（如果使用）
# ================================

# MongoDB配置
MONGODB_URI=mongodb://localhost:27017/scholar_search
MONGODB_USER=your_mongodb_user
MONGODB_PASSWORD=your_mongodb_password

# Redis配置（用于缓存）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ================================
# 邮件服务配置（用于通知）
# ================================

# SMTP配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@your-domain.com

# ================================
# 其他配置
# ================================

# 应用域名
APP_DOMAIN=your-domain.com

# API请求超时时间（毫秒）
API_TIMEOUT=30000

# 最大搜索结果数
MAX_SEARCH_RESULTS=100

# 日志保留天数
LOG_RETENTION_DAYS=30